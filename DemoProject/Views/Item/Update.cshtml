@{
    ViewData["Title"] = "Update Item";
}

@model DemoProject.Models.Item
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-primary">Update Item</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="UpdatePost" method="post" asp-controller="Item">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="ItemName"></label><br />
                <input type="text" class="form-control" asp-for="ItemName" placeholder="Name" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower"></label><br />
                <input type="text" class="form-control" asp-for="Borrower" placeholder="Name" />
                <span asp-validation-for="Borrower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lender"></label><br />
                <input type="text" class="form-control" asp-for="Lender" placeholder="Name" />
                <span asp-validation-for="Lender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Item" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{<partial name="_ValidationScriptsPartial"/>}
}